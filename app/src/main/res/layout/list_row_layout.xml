<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="140dip"
    android:id="@+id/transaction_item"
    android:weightSum="1">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/transaction_frame"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/id_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="ID:"
            android:textColor="@color/ColorPrimaryDark"
            android:textAppearance="@android:style/TextAppearance.Medium" />

        <TextView
            android:id="@+id/to_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Account to:"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:layout_below="@+id/from_field"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/from_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Account from:"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:layout_below="@+id/id_label"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/from_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="account from number"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:layout_below="@+id/id_field"
            android:layout_toRightOf="@+id/from_label"
            android:layout_toEndOf="@+id/from_label"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/state_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="State:"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:layout_below="@+id/event_label"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/id_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Transaction id"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/ColorPrimaryDark"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/id_label"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/to_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="account to number"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:layout_alignTop="@+id/to_label"
            android:layout_toRightOf="@+id/to_label"
            android:layout_toEndOf="@+id/to_label"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/state_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="STATE"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:layout_below="@+id/event_field"
            android:layout_toRightOf="@+id/state_label"
            android:layout_toEndOf="@+id/state_label"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/event_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="EVENT"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:layout_below="@+id/to_label"
            android:layout_toRightOf="@+id/event_label"
            android:layout_toEndOf="@+id/event_label"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/event_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Event:"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:layout_below="@+id/to_label"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/amount_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Amount:"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:layout_below="@+id/state_label"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/amount_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="AMOUNT"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:layout_below="@+id/state_field"
            android:layout_toRightOf="@+id/amount_label"
            android:layout_toEndOf="@+id/amount_label"
            android:layout_marginLeft="10dp" />

    </RelativeLayout>

</LinearLayout>